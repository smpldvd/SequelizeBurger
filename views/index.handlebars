<header>
    <h1>Welcome to Good Burger!</h1>
    <h2>Home of the Good Burger!</h2>
    <hr>
</header>
<div class="row">
    <div class="col text-left">
        <table>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </table>
    </div>
    <div class="col text-left">
        <table>
            {{#each burgers}}
            <tr>
                {{#if devoured}}
                <td>
                    {{id}}. {{burger_name}}
                </td>
                {{/if}}
            </tr>
            {{/each}}
        </table>
    </div>
</div>
<br>
<div class="row">
    <div class="col text-center">
        <form class="create-form">
            <div class="form-group">
                <label for="burgerName"></label>
                <textarea type="text" id="burgerName" placeholder="Can I take your order?" rows="2"></textarea>
            </div>
            <button type="submit">Flip Patties</button>
        </form>
    </div>
</div>